<Window x:Class="TwitchChatBotGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <TextBox Name="ProxyAddress" ToolTip="Leave blank if there is no proxy"  HorizontalAlignment="Left" Height="24" Margin="116,96,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="ProxyAddressChanged"/>
        <TextBox Name="ProxyPort" ToolTip="Leave blank if there is no proxy"  HorizontalAlignment="Left" Height="22" Margin="116,136,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="56" TextChanged="ProxyPortChanged"/>
        <Button Name="ConnectButton"  Content="Connect" IsEnabled="False"  HorizontalAlignment="Left" Margin="116,168,0,0" VerticalAlignment="Top" Width="74" Click="ConnectClick"/>
        <TextBlock HorizontalAlignment="Left" Margin="26,96,0,0" TextWrapping="Wrap" Text="Proxy Address:" VerticalAlignment="Top" Height="24" Width="78"/>
        <TextBlock HorizontalAlignment="Left" Margin="48,142,0,0" TextWrapping="Wrap" Text="Proxy Port:" VerticalAlignment="Top" Height="16" Width="62"/>
        <TextBox Name="MessageBox" HorizontalAlignment="Left" Height="22" Margin="116,248,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="58,248,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" Width="52"><Run Language="ru-ru" Text="Message:"/></TextBlock>
        <Button Name="SendButton" Content="Send" IsEnabled="False" HorizontalAlignment="Left" Margin="116,282,0,0" VerticalAlignment="Top" Width="74" Click="SendClick"/>
        <Separator HorizontalAlignment="Left" Height="100" Margin="153,109,0,0" VerticalAlignment="Top" Width="288" RenderTransformOrigin="0.5,0.5">
            <Separator.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Separator.RenderTransform>
        </Separator>
        <Button Name="StartQuizButton"  Content="Start Quiz" IsEnabled="False" HorizontalAlignment="Left" Margin="385,88,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label Name="TimerLabel" Content="Quiz is not running" HorizontalAlignment="Left" Margin="365,34,0,0" VerticalAlignment="Top" Width="113" Height="31"/>
        <TextBlock HorizontalAlignment="Left" Margin="27,16,0,0" TextWrapping="Wrap" Text="Authorized as:" VerticalAlignment="Top" Height="16" Width="77"/>
        <GroupBox Header="Connection" HorizontalAlignment="Left" Margin="16,72,0,0" VerticalAlignment="Top" Height="128" Width="228"/>
        <Label Name="AuthLableName" Content="" HorizontalAlignment="Left" Margin="116,11,0,0" VerticalAlignment="Top"/>
        <Button Name="Authorize" Content="Authorize" HorizontalAlignment="Left" Margin="115,45,0,0" VerticalAlignment="Top" Width="75" Click="Authorize_Click"/>

    </Grid>
</Window>
