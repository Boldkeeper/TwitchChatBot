<Window x:Class="TwitchChatBotGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <TextBox Name="ProxyAddress"  HorizontalAlignment="Left" Height="24" Margin="52,30,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="ProxyAddressChanged"/>
        <TextBox Name="ProxyPort"  HorizontalAlignment="Left" Height="22" Margin="52,64,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="56" TextChanged="ProxyPortChanged"/>
        <Button Content="Connect" HorizontalAlignment="Left" Margin="52,100,0,0" VerticalAlignment="Top" Width="75" Click="ConnectClick"/>

    </Grid>
</Window>
