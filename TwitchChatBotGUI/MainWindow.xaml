<Window x:Class="TwitchChatBotGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <TextBox Name="ProxyAddress"  HorizontalAlignment="Left" Height="24" Margin="99,16,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="ProxyAddressChanged"/>
        <TextBox Name="ProxyPort"  HorizontalAlignment="Left" Height="22" Margin="99,56,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="56" TextChanged="ProxyPortChanged"/>
        <Button Content="Connect" HorizontalAlignment="Left" Margin="99,88,0,0" VerticalAlignment="Top" Width="75" Click="ConnectClick"/>
        <TextBlock HorizontalAlignment="Left" Margin="9,16,0,0" TextWrapping="Wrap" Text="Proxy Address:" VerticalAlignment="Top" Height="24" Width="78"/>
        <TextBlock HorizontalAlignment="Left" Margin="32,62,0,0" TextWrapping="Wrap" Text="Proxy Port:" VerticalAlignment="Top" Height="16" Width="62"/>
        <TextBox Name="MessageBox" HorizontalAlignment="Left" Height="22" Margin="99,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="41,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" Width="53"><Run Language="ru-ru" Text="Message:"/></TextBlock>
        <Button Content="Send" HorizontalAlignment="Left" Margin="99,202,0,0" VerticalAlignment="Top" Width="75" Click="SendClick"/>

    </Grid>
</Window>
