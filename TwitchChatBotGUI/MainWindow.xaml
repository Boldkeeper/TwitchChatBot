<Window x:Class="TwitchChatBotGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="363.5" Width="565.5" Loaded="Window_Loaded">
    <Grid Name="mainGrid">
        <Button Name="ConnectButton"  Content="Connect" IsEnabled="False"  HorizontalAlignment="Left" Margin="143,188,0,0" VerticalAlignment="Top" Width="74" Click="ConnectClick"/>
        <TextBox Name="MessageBox" HorizontalAlignment="Left" Height="22" Margin="10,302,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="466"/>
        <Button Name="SendButton" Content="Send" IsEnabled="False" HorizontalAlignment="Left" Margin="481,302,0,0" VerticalAlignment="Top" Width="67" Click="SendClick"/>
        <Button Name="StartQuizButton"  Content="Start Quiz" IsEnabled="False" HorizontalAlignment="Left" Margin="396,188,0,0" VerticalAlignment="Top" Width="76" Click="Button_Click"/>
        <Label Name="TimerLabel" Content="Quiz is not running" HorizontalAlignment="Left" Margin="378,148,0,0" VerticalAlignment="Top" Width="113" Height="30"/>
        <TextBlock HorizontalAlignment="Left" Margin="54,36,0,0" TextWrapping="Wrap" Text="Authorized as:" VerticalAlignment="Top" Height="16" Width="77"/>
        <Label Name="AuthLableName" Content="" HorizontalAlignment="Left" Margin="143,30,0,0" VerticalAlignment="Top"/>
        <Button Name="Authorize" Content="Authorize" HorizontalAlignment="Left" Margin="142,64,0,0" VerticalAlignment="Top" Width="75" Click="Authorize_Click"/>

        <TextBox Name="ChannelTextBox"  HorizontalAlignment="Left" Height="23" Margin="396,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="338,36,0,0" TextWrapping="Wrap" Text="Channel:" VerticalAlignment="Top"/>
        <Button Name ="JoinChannel" Content="Join" HorizontalAlignment="Left" Margin="395,64,0,0" VerticalAlignment="Top" Width="75" Click="JoinChannel_Click"/>
        <Menu IsMainMenu="True" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="Auto">
            <MenuItem Header="Settings">
                <MenuItem Header="Network"  Click="OpenNetworkSettings"/>
                <MenuItem Header="Quiz"  Click="OpenQuizSettings"/>
            </MenuItem>
        </Menu>
    </Grid>

</Window>
